@model SonaBookings.Models.Booking

@{
    ViewData["Title"] = "Edit";
}

<h2>Thay đổi phòng</h2>
<hr />
<div class="row justify-content-center">
    <div class="row justify-content-center">
        <form asp-action="Edit" class="justify-content-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingId" />
            <div class="form-ouline mb-5">
                <input type="hidden" asp-for="UserId"/>
            </div>
            <div class="form-ouline mb-4 col-10">
               
                <select asp-for="RoomId" class="form-ouline mb-4" style="width:auto" asp-items="ViewBag.RoomId"></select>
            </div>
            <div class="form-ouline mb-4">
               
                <input readonly asp-for="CheckInDate" class="form-control" />
              
            </div>
            <div class="form-ouline mb-4">
             
                <input readonly asp-for="CheckOutDate" class="form-control" />
             
            </div>
            <div class="form-ouline mb-4">
           
                <input readonly asp-for="BookingDate" class="form-control" />
     
            </div>
            <div class="form-ouline mb-4">
                <input type="hidden" asp-for="Status" class="form-control" />
            </div>
            <div class="form-ouline mb-4">
                <input type="submit" value="Thay đổi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Quay lại</a>
</div>

<partial name ="_ViewDetailsStyle" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
                .hidden {
            display: none;
        }
    </script>
}
