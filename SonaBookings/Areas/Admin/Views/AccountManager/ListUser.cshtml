@using SonaBookings.Areas.Identity.Data
@model IEnumerable<ApplicationUser>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@if(Model.Any())
{
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">All Account</h6>
                <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Add New</a>
            </div>
            <div class="card-body">
                <h2>Account Management</h2>
                <div class="table-responsive">
                    <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">           
                        <div class="row">
                            <div class="col-sm-12">
                                
                                <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                    <thead>
                                        <tr role="row"><th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="User Id: activate to sort column descending" style="width: 74.2px;">User Id:</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="User Name: activate to sort column ascending" style="width: 97.2px;">User Name</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Action: activate to sort column ascending" style="width: 58.2px;">Action</th>@* <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 30.2px;">Status</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Capacity For: activate to sort column ascending" style="width: 70.2px;">Capacity For</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Size: activate to sort column ascending" style="width: 66.2px;">Size</th> *@</tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in Model)
                                        {
                                            <tr class="even">
                                                <td class="sorting_1">@user.Id</td>
                                                <td>@user.UserName</td>
                                                <td>
                                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                                        <a class="btn btn-primary" asp-action="EditUser" asp-controller="AccountManager" asp-area="Admin" asp-route-id="@user.Id">Edit</a>
                                                        <button class="btn btn-primary" type="submit" onclick="return confirm('@user.UserName se bi xoa')">Delete
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            No user created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="AccountManager" asp-action="Register">
                Add new User
            </a>
        </div>
    </div>
}

<partial name="_ViewDetailsStyle" />






